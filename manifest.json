{
  "name"       : "stacker",
  "description": "Follow people and get their aggregated stackexchange site wide activity feeds",
  "version"    : "0.0.0",
  "icons": {
    "32" : "images/icon32.png",
    "48" : "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action" : {
    "default_title": "Stacker",
    "default_icon" : "images/icon.png",
    "popup"        : "feeds.html"
  },
  "background_page"       : "background.html",
  "homepage_url"          : "http://cuteoverflow.com",
  "minimum_chrome_version": "13.0",
  "content_scripts": [
    {
      "matches": ["http://twitter.com/*", "https://twitter.com/*"],
      "js"     : ["js/lib/zepto.js",
                  "js/lib/underscore.js",
                  "js/watcher.js",
                  "js/referee.js",
                  "js/content_script.js"]
    }
  ],
  "options_page": "options.html",
  "permissions" : []
}